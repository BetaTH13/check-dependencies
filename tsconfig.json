{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": false,
        "checkJs": false,
        "forceConsistentCasingInFileNames": true,
        "types": ["vitest/globals", "node"],
        "importHelpers": false
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules", "dist", "build"]
}